    "@astrojs/sitemap": "^3.2.1",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "astro": "^5.2.3",
    "astro-embed": "^0.9.0",
    "date-fns": "^4.1.0",
